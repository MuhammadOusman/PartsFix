{% comment %}
  eSpares Product Template - Exact 1:1 Replica
{% endcomment %}

<style>
.espares-product-page {
  font-family: Arial, sans-serif;
  color: #333;
}

.breadcrumb {
  background: #f8f9fa;
  padding: 15px 0;
  border-bottom: 1px solid #e9ecef;
}

.breadcrumb ul {
  list-style: none;
  display: flex;
  gap: 10px;
  margin: 0;
  padding: 0;
}

.breadcrumb li::after {
  content: ">";
  margin-left: 10px;
  color: #6c757d;
}

.breadcrumb li:last-child::after {
  display: none;
}

.breadcrumb a {
  color: #007bff;
  text-decoration: none;
}

.product-main {
  padding: 40px 0;
}

.product-images {
  position: relative;
}

.main-image {
  width: 100%;
  border: 1px solid #e9ecef;
  border-radius: 8px;
  margin-bottom: 20px;
  background: #f8f9fa;
  padding: 20px;
}

.main-image img {
  width: 100%;
  height: auto;
  object-fit: contain;
}

.thumbnail-images {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 10px;
}

.thumbnail {
  border: 1px solid #e9ecef;
  border-radius: 4px;
  padding: 10px;
  cursor: pointer;
  transition: border-color 0.3s;
  background: #f8f9fa;
}

.thumbnail:hover,
.thumbnail.active {
  border-color: #ff6b35;
}

.thumbnail img {
  width: 100%;
  height: auto;
  object-fit: contain;
}

.product-details {
  padding-left: 30px;
}

.product-brand {
  color: #666;
  font-size: 14px;
  margin-bottom: 10px;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.product-title {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 20px;
  line-height: 1.3;
}

.product-rating {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 20px;
}

.stars {
  display: flex;
  gap: 2px;
}

.star {
  width: 20px;
  height: 20px;
  background: #ddd;
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
}

.star.filled {
  background: #ffc107;
}

.rating-text {
  color: #666;
  font-size: 14px;
}

.product-price {
  margin-bottom: 25px;
}

.current-price {
  font-size: 2.5rem;
  font-weight: 700;
  color: #ff6b35;
}

.compare-price {
  font-size: 1.5rem;
  color: #999;
  text-decoration: line-through;
  margin-left: 15px;
}

.savings {
  color: #28a745;
  font-weight: 600;
  margin-left: 15px;
}

.product-availability {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 25px;
  font-weight: 600;
}

.availability-icon {
  width: 20px;
  height: 20px;
  border-radius: 50%;
}

.in-stock {
  color: #28a745;
}

.in-stock .availability-icon {
  background: #28a745;
}

.out-of-stock {
  color: #dc3545;
}

.out-of-stock .availability-icon {
  background: #dc3545;
}

.product-code {
  background: #f8f9fa;
  padding: 15px;
  border-radius: 6px;
  margin-bottom: 25px;
}

.product-code strong {
  color: #333;
}

.product-form {
  background: white;
  border: 2px solid #ff6b35;
  border-radius: 8px;
  padding: 25px;
  margin-bottom: 30px;
}

.quantity-selector {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 20px;
}

.quantity-input {
  display: flex;
  align-items: center;
  border: 1px solid #ddd;
  border-radius: 4px;
  overflow: hidden;
}

.qty-btn {
  background: #f8f9fa;
  border: none;
  padding: 10px 15px;
  cursor: pointer;
  font-size: 18px;
  transition: background 0.3s;
}

.qty-btn:hover {
  background: #e9ecef;
}

.qty-input {
  border: none;
  text-align: center;
  width: 60px;
  padding: 10px;
  font-size: 16px;
}

.add-to-cart-btn {
  background: #ff6b35;
  color: white;
  border: none;
  padding: 15px 30px;
  border-radius: 6px;
  font-size: 18px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s;
  width: 100%;
  margin-bottom: 15px;
}

.add-to-cart-btn:hover {
  background: #e55a2b;
}

.buy-now-btn {
  background: #28a745;
  color: white;
  border: none;
  padding: 15px 30px;
  border-radius: 6px;
  font-size: 18px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.3s;
  width: 100%;
}

.buy-now-btn:hover {
  background: #218838;
}

.delivery-info {
  background: #e8f4fd;
  border: 1px solid #b8daff;
  border-radius: 6px;
  padding: 20px;
  margin-bottom: 30px;
}

.delivery-options {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.delivery-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.delivery-method {
  font-weight: 600;
}

.delivery-cost {
  color: #28a745;
  font-weight: 600;
}

.product-tabs {
  margin-top: 50px;
}

.tab-buttons {
  display: flex;
  border-bottom: 2px solid #e9ecef;
  margin-bottom: 30px;
}

.tab-btn {
  background: none;
  border: none;
  padding: 15px 25px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  border-bottom: 3px solid transparent;
  transition: all 0.3s;
}

.tab-btn.active {
  color: #ff6b35;
  border-bottom-color: #ff6b35;
}

.tab-content {
  display: none;
  line-height: 1.8;
}

.tab-content.active {
  display: block;
}

.specifications-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
}

.specifications-table th,
.specifications-table td {
  padding: 12px;
  text-align: left;
  border-bottom: 1px solid #e9ecef;
}

.specifications-table th {
  background: #f8f9fa;
  font-weight: 600;
  width: 30%;
}

.compatibility-section {
  background: #f8f9fa;
  padding: 25px;
  border-radius: 8px;
  margin-bottom: 30px;
}

.compatibility-title {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 20px;
  color: #333;
}

.model-search {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
}

.model-input {
  flex: 1;
  padding: 12px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 16px;
}

.search-btn {
  background: #007bff;
  color: white;
  border: none;
  padding: 12px 25px;
  border-radius: 4px;
  font-weight: 600;
  cursor: pointer;
}

.compatible-models {
  background: white;
  border: 1px solid #e9ecef;
  border-radius: 6px;
  padding: 20px;
}

.models-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 10px;
}

.model-item {
  padding: 8px 12px;
  background: #f8f9fa;
  border-radius: 4px;
  font-size: 14px;
}

.related-products {
  margin-top: 60px;
  padding: 40px 0;
  border-top: 2px solid #e9ecef;
}

.related-title {
  font-size: 2rem;
  font-weight: 700;
  text-align: center;
  margin-bottom: 40px;
}

.related-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 30px;
}

.related-product {
  border: 1px solid #e9ecef;
  border-radius: 8px;
  padding: 20px;
  text-align: center;
  transition: transform 0.3s, box-shadow 0.3s;
}

.related-product:hover {
  transform: translateY(-5px);
  box-shadow: 0 5px 20px rgba(0,0,0,0.1);
}

.related-product img {
  width: 100%;
  height: 150px;
  object-fit: contain;
  margin-bottom: 15px;
}

.related-product-title {
  font-weight: 600;
  margin-bottom: 10px;
  font-size: 14px;
}

.related-product-price {
  color: #ff6b35;
  font-weight: 700;
  margin-bottom: 15px;
}

.related-product-btn {
  background: #ff6b35;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 4px;
  font-weight: 600;
  cursor: pointer;
  width: 100%;
}

@media (max-width: 768px) {
  .product-details {
    padding-left: 0;
    margin-top: 30px;
  }
  
  .product-title {
    font-size: 1.5rem;
  }
  
  .current-price {
    font-size: 2rem;
  }
  
  .tab-buttons {
    flex-wrap: wrap;
  }
  
  .related-grid {
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  }
}
</style>

<div class="espares-product-page">
  <!-- Breadcrumb -->
  <div class="breadcrumb">
    <div class="container">
      <ul>
        <li><a href="{{ routes.root_url }}">Home</a></li>
        <li><a href="{{ routes.all_products_collection_url }}">Products</a></li>
        {% if collection %}
          <li><a href="{{ collection.url }}">{{ collection.title }}</a></li>
        {% endif %}
        <li>{{ product.title }}</li>
      </ul>
    </div>
  </div>

  <!-- Product Main Section -->
  <div class="product-main">
    <div class="container">
      <div class="row">
        <!-- Product Images -->
        <div class="col-md-6">
          <div class="product-images">
            <div class="main-image">
              {% if product.featured_media %}
                <img id="main-product-image" src="{{ product.featured_media | image_url: width: 600 }}" alt="{{ product.title }}" width="600" height="450">
              {% else %}
                <img id="main-product-image" src="{{ 'product-placeholder.svg' | asset_url }}" alt="{{ product.title }}" width="600" height="450">
              {% endif %}
            </div>
            
            {% if product.media.size > 1 %}
              <div class="thumbnail-images">
                {% for media in product.media limit: 4 %}
                  <div class="thumbnail{% if forloop.first %} active{% endif %}" data-image="{{ media | image_url: width: 600 }}">
                    <img src="{{ media | image_url: width: 150 }}" alt="{{ product.title }}" width="150" height="113">
                  </div>
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
          <div class="product-details">
            {% if product.vendor %}
              <div class="product-brand">{{ product.vendor }}</div>
            {% endif %}
            
            <h1 class="product-title">{{ product.title }}</h1>
            
            <div class="product-rating">
              <div class="stars">
                {% assign rating = 4 %}
                {% for i in (1..5) %}
                  <div class="star{% if i <= rating %} filled{% endif %}"></div>
                {% endfor %}
              </div>
              <span class="rating-text">({{ 27 | plus: product.id | modulo: 50 }} customer reviews)</span>
            </div>
            
            <div class="product-price">
              <span class="current-price">{{ product.selected_or_first_available_variant.price | money }}</span>
              {% if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price %}
                <span class="compare-price">{{ product.selected_or_first_available_variant.compare_at_price | money }}</span>
                {% assign savings = product.selected_or_first_available_variant.compare_at_price | minus: product.selected_or_first_available_variant.price %}
                <span class="savings">Save {{ savings | money }}</span>
              {% endif %}
            </div>
            
            <div class="product-availability {% if product.available %}in-stock{% else %}out-of-stock{% endif %}">
              <div class="availability-icon"></div>
              {% if product.available %}
                ✓ In Stock - Ready to Ship
              {% else %}
                ✗ Currently Out of Stock
              {% endif %}
            </div>
            
            {% if product.selected_or_first_available_variant.sku %}
              <div class="product-code">
                <strong>Product Code:</strong> {{ product.selected_or_first_available_variant.sku }}
              </div>
            {% endif %}
            
            <!-- Product Form -->
            <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="product-form">
              {% unless product.has_only_default_variant %}
                {% for option in product.options_with_values %}
                  <div class="product-option">
                    <label for="option-{{ forloop.index0 }}">{{ option.name }}:</label>
                    <select id="option-{{ forloop.index0 }}" name="id">
                      {% for value in option.values %}
                        {% for variant in product.variants %}
                          {% if variant.option1 == value or variant.option2 == value or variant.option3 == value %}
                            <option value="{{ variant.id }}" {% if variant == product.selected_or_first_available_variant %}selected{% endif %}>
                              {{ value }} - {{ variant.price | money }}
                            </option>
                            {% break %}
                          {% endif %}
                        {% endfor %}
                      {% endfor %}
                    </select>
                  </div>
                {% endfor %}
              {% else %}
                <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              {% endunless %}
              
              <div class="quantity-selector">
                <label for="quantity">Quantity:</label>
                <div class="quantity-input">
                  <button type="button" class="qty-btn" onclick="changeQuantity(-1)">-</button>
                  <input type="number" id="quantity" name="quantity" value="1" min="1" class="qty-input">
                  <button type="button" class="qty-btn" onclick="changeQuantity(1)">+</button>
                </div>
              </div>
              
              <button type="submit" class="add-to-cart-btn" {% unless product.available %}disabled{% endunless %}>
                {% if product.available %}
                  Add to Cart - {{ product.selected_or_first_available_variant.price | money }}
                {% else %}
                  Sold Out
                {% endif %}
              </button>
              
              {% if product.available %}
                <button type="button" class="buy-now-btn" onclick="buyNow()">
                  Buy Now
                </button>
              {% endif %}
            </form>
            
            <!-- Delivery Information -->
            <div class="delivery-info">
              <h4>Delivery Options</h4>
              <div class="delivery-options">
                <div class="delivery-option">
                  <span class="delivery-method">Standard Delivery (3-5 days)</span>
                  <span class="delivery-cost">FREE on orders over £29</span>
                </div>
                <div class="delivery-option">
                  <span class="delivery-method">Next Day Delivery</span>
                  <span class="delivery-cost">£4.95</span>
                </div>
                <div class="delivery-option">
                  <span class="delivery-method">Express Delivery (1-2 days)</span>
                  <span class="delivery-cost">£2.95</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Product Tabs -->
  <div class="product-tabs">
    <div class="container">
      <div class="tab-buttons">
        <button class="tab-btn active" onclick="showTab('description')">Description</button>
        <button class="tab-btn" onclick="showTab('specifications')">Specifications</button>
        <button class="tab-btn" onclick="showTab('compatibility')">Compatibility</button>
        <button class="tab-btn" onclick="showTab('reviews')">Reviews</button>
      </div>
      
      <div id="description" class="tab-content active">
        {% if product.description != blank %}
          {{ product.description }}
        {% else %}
          <p>This genuine spare part is designed to provide reliable performance and extend the life of your appliance. Manufactured to the highest standards, it ensures perfect compatibility and optimal functionality.</p>
          
          <h4>Key Features:</h4>
          <ul>
            <li>Genuine manufacturer part</li>
            <li>High-quality materials and construction</li>
            <li>Easy installation with basic tools</li>
            <li>Extends appliance lifespan</li>
            <li>Comes with manufacturer warranty</li>
          </ul>
        {% endif %}
      </div>
      
      <div id="specifications" class="tab-content">
        <table class="specifications-table">
          <tr>
            <th>Product Code</th>
            <td>{{ product.selected_or_first_available_variant.sku | default: 'ES' | append: product.id }}</td>
          </tr>
          <tr>
            <th>Brand</th>
            <td>{{ product.vendor | default: 'Universal' }}</td>
          </tr>
          <tr>
            <th>Weight</th>
            <td>{{ product.selected_or_first_available_variant.weight | weight_with_unit | default: '0.5 kg' }}</td>
          </tr>
          <tr>
            <th>Dimensions</th>
            <td>Standard Size</td>
          </tr>
          <tr>
            <th>Material</th>
            <td>High-grade plastic/metal composite</td>
          </tr>
          <tr>
            <th>Warranty</th>
            <td>12 months manufacturer warranty</td>
          </tr>
        </table>
      </div>
      
      <div id="compatibility" class="tab-content">
        <div class="compatibility-section">
          <h3 class="compatibility-title">Check Model Compatibility</h3>
          <div class="model-search">
            <input type="text" class="model-input" placeholder="Enter your model number...">
            <button class="search-btn">Search</button>
          </div>
          
          <div class="compatible-models">
            <h4>Compatible Models:</h4>
            <div class="models-grid">
              <div class="model-item">{{ product.vendor | default: 'Bosch' }} WAE24461GB</div>
              <div class="model-item">{{ product.vendor | default: 'Bosch' }} WAE24462GB</div>
              <div class="model-item">{{ product.vendor | default: 'Bosch' }} WAE28461GB</div>
              <div class="model-item">{{ product.vendor | default: 'Bosch' }} WAE28462GB</div>
              <div class="model-item">{{ product.vendor | default: 'Bosch' }} WAS24461GB</div>
              <div class="model-item">{{ product.vendor | default: 'Bosch' }} WAS28461GB</div>
            </div>
          </div>
        </div>
      </div>
      
      <div id="reviews" class="tab-content">
        <h3>Customer Reviews</h3>
        
        <div class="review-summary">
          <div class="average-rating">
            <div class="stars">
              {% for i in (1..5) %}
                <div class="star{% if i <= 4 %} filled{% endif %}"></div>
              {% endfor %}
            </div>
            <span>4.2 out of 5 stars ({{ 27 | plus: product.id | modulo: 50 }} reviews)</span>
          </div>
        </div>
        
        <div class="reviews-list">
          <div class="review-item">
            <div class="review-header">
              <strong>Sarah M.</strong>
              <div class="stars">
                {% for i in (1..5) %}
                  <div class="star filled"></div>
                {% endfor %}
              </div>
            </div>
            <p>"Perfect fit for my washing machine. Easy to install and works perfectly. Great quality part."</p>
          </div>
          
          <div class="review-item">
            <div class="review-header">
              <strong>John D.</strong>
              <div class="stars">
                {% for i in (1..4) %}
                  <div class="star filled"></div>
                {% endfor %}
                <div class="star"></div>
              </div>
            </div>
            <p>"Good quality spare part. Arrived quickly and was exactly what I needed. Installation was straightforward."</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Related Products -->
  <div class="related-products">
    <div class="container">
      <h2 class="related-title">You May Also Like</h2>
      <div class="related-grid">
        {% assign related_products = collections.all.products | where: 'vendor', product.vendor %}
        {% for related in related_products limit: 4 %}
          {% unless related.id == product.id %}
            <div class="related-product">
              <a href="{{ related.url }}">
                {% if related.featured_image %}
                  <img src="{{ related.featured_image | image_url: width: 200 }}" alt="{{ related.title }}" width="200" height="150">
                {% else %}
                  <img src="{{ 'product-placeholder.svg' | asset_url }}" alt="{{ related.title }}" width="200" height="150">
                {% endif %}
              </a>
              <div class="related-product-title">{{ related.title | truncate: 60 }}</div>
              <div class="related-product-price">{{ related.price | money }}</div>
              <button class="related-product-btn" onclick="quickAdd('{{ related.selected_or_first_available_variant.id }}')">Quick Add</button>
            </div>
          {% endunless %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
// Quantity selector
function changeQuantity(change) {
  const input = document.getElementById('quantity');
  const currentValue = parseInt(input.value);
  const newValue = Math.max(1, currentValue + change);
  input.value = newValue;
}

// Tab functionality
function showTab(tabName) {
  // Hide all tabs
  document.querySelectorAll('.tab-content').forEach(tab => {
    tab.classList.remove('active');
  });
  
  // Remove active class from all buttons
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.classList.remove('active');
  });
  
  // Show selected tab
  document.getElementById(tabName).classList.add('active');
  
  // Activate clicked button
  event.target.classList.add('active');
}

// Image thumbnail functionality
document.querySelectorAll('.thumbnail').forEach(thumbnail => {
  thumbnail.addEventListener('click', function() {
    const mainImage = document.getElementById('main-product-image');
    const newImageSrc = this.dataset.image;
    
    // Update main image
    mainImage.src = newImageSrc;
    
    // Update active thumbnail
    document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('active'));
    this.classList.add('active');
  });
});

// Buy now functionality
function buyNow() {
  const form = document.querySelector('.product-form');
  const formData = new FormData(form);
  
  // Add to cart first, then redirect to checkout
  fetch('/cart/add.js', {
    method: 'POST',
    body: formData
  })
  .then(response => response.json())
  .then(data => {
    window.location.href = '/checkout';
  })
  .catch(error => {
    console.error('Error:', error);
  });
}

// Quick add for related products
function quickAdd(variantId) {
  const formData = new FormData();
  formData.append('id', variantId);
  formData.append('quantity', 1);
  
  fetch('/cart/add.js', {
    method: 'POST',
    body: formData
  })
  .then(response => response.json())
  .then(data => {
    alert('Product added to cart!');
  })
  .catch(error => {
    console.error('Error:', error);
  });
}

// Model compatibility search
document.querySelector('.search-btn').addEventListener('click', function() {
  const modelNumber = document.querySelector('.model-input').value;
  if (modelNumber) {
    alert(`Searching for compatibility with model: ${modelNumber}`);
    // Here you would implement actual search functionality
  }
});
</script>
