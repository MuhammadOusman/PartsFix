<style>
.cc-banner{position:fixed;z-index:3000;left:0;right:0;bottom:0;background:#111;color:#fff;padding:14px 20px;font-size:14px;display:flex;flex-wrap:wrap;gap:12px;align-items:center;justify-content:space-between;font-family:'Lato',sans-serif;}
.cc-banner button{background:#ff6b35;color:#fff;border:none;padding:8px 16px;border-radius:4px;cursor:pointer;font-weight:600;}
.cc-banner a{color:#ffd200;text-decoration:underline;}
@media (max-width:640px){.cc-banner{flex-direction:column;align-items:flex-start;}}
</style>
<div class="cc-banner" id="cc-banner" hidden>
  <div class="cc-text">We use cookies to improve your experience and load features like Trustpilot reviews. See our <a href="/pages/cookies-policy">Cookies Policy</a>.</div>
  <div class="cc-actions">
    <button type="button" data-cc="accept">Accept</button>
    <button type="button" data-cc="reject">Reject</button>
  </div>
</div>
<script>
(function(){
  const KEY='cc-consent';
  const banner=document.getElementById('cc-banner');
  if(!banner) return;
  const stored=localStorage.getItem(KEY);
  if(!stored){ banner.hidden=false; }
  function set(v){ localStorage.setItem(KEY,v); banner.remove(); if(v==='accept'){ document.dispatchEvent(new CustomEvent('cc:accepted')); } }
  banner.querySelector('[data-cc="accept"]').addEventListener('click',()=>set('accept'));
  banner.querySelector('[data-cc="reject"]').addEventListener('click',()=>set('reject'));
})();
</script>
