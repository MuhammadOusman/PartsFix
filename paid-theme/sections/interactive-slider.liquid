<style>
:root {
  --primary-orange: #ff6b35;
  --primary-orange-light: #ff8a5e;
  --primary-orange-dark: #e55a2b;
  --accent-orange: #ffab47;
  --pure-white: #ffffff;
  --light-gray: #f8f9fa;
  --border-gray: #e9ecef;
  --text-dark: #2c3e50;
  --text-muted: #6c757d;
  --shadow-light: 0 4px 12px rgba(255, 107, 53, 0.08);
  --shadow-medium: 0 6px 20px rgba(255, 107, 53, 0.12);
  --shadow-heavy: 0 10px 30px rgba(255, 107, 53, 0.15);
  --border-radius: 16px;
  --border-radius-small: 8px;
  --transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.parts-smart-tips-section {
  padding: 100px 0;
  background: linear-gradient(135deg, var(--pure-white) 0%, #fef7f4 100%);
  position: relative;
  overflow: hidden;
}

.parts-smart-tips-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange), var(--primary-orange));
  animation: flow 8s ease-in-out infinite;
}

@keyframes flow {
  0%, 100% { transform: translateX(-100px); }
  50% { transform: translateX(100px); }
}

.parts-smart-tips-section .container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 24px;
}

.parts-smart-tips-section h2 {
  text-align: center;
  margin-bottom: 80px;
  font-size: 3.2rem;
  font-weight: 900;
  color: var(--text-dark);
  position: relative;
  padding-bottom: 30px;
  text-transform: uppercase;
  letter-spacing: -1px;
  background: linear-gradient(45deg, var(--text-dark), var(--primary-orange));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.parts-smart-tips-section h2::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 120px;
  height: 6px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
  border-radius: 3px;
  box-shadow: 0 4px 16px rgba(255, 107, 53, 0.3);
}

.smart-tips-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 40px;
  margin-bottom: 60px;
}

.smart-tip-card {
  background: var(--pure-white);
  border-radius: 24px;
  padding: 40px 32px;
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-light);
  border: 2px solid transparent;
  transition: var(--transition);
  transform: translateY(0);
  cursor: pointer;
}

.smart-tip-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
  transform: scaleX(0);
  transition: var(--transition);
}

.smart-tip-card:hover {
  transform: translateY(-12px) scale(1.02);
  box-shadow: var(--shadow-heavy);
  border-color: var(--primary-orange);
}

.smart-tip-card:hover::before {
  transform: scaleX(1);
}

.smart-tip-card:nth-child(1) { animation-delay: 0.1s; }
.smart-tip-card:nth-child(2) { animation-delay: 0.2s; }
.smart-tip-card:nth-child(3) { animation-delay: 0.3s; }

.tip-icon-wrapper {
  width: 80px;
  height: 80px;
  margin: 0 auto 24px;
  background: linear-gradient(135deg, var(--primary-orange), var(--accent-orange));
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  box-shadow: 0 8px 24px rgba(255, 107, 53, 0.25);
}

.tip-icon-wrapper::before {
  content: '';
  position: absolute;
  inset: -4px;
  background: linear-gradient(135deg, var(--primary-orange), var(--accent-orange), var(--primary-orange));
  border-radius: 50%;
  z-index: -1;
  animation: pulse 3s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.7; }
  50% { transform: scale(1.1); opacity: 0.3; }
}

.tip-icon {
  font-size: 2.4rem;
  color: var(--pure-white);
  filter: drop-shadow(0 2px 4px rgba(0,0,0,0.2));
}

.tip-title {
  font-size: 1.8rem;
  font-weight: 700;
  color: var(--text-dark);
  margin-bottom: 16px;
  text-align: center;
  line-height: 1.3;
}

.tip-description {
  font-size: 1.1rem;
  color: var(--text-muted);
  line-height: 1.7;
  text-align: center;
  margin-bottom: 24px;
}

.tip-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 24px;
  padding-top: 24px;
  border-top: 2px solid var(--light-gray);
}

.tip-stat {
  text-align: center;
}

.tip-stat-number {
  font-size: 1.4rem;
  font-weight: 700;
  color: var(--primary-orange);
  display: block;
}

.tip-stat-label {
  font-size: 0.85rem;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.smart-cta-section {
  text-align: center;
  background: linear-gradient(135deg, var(--primary-orange), var(--accent-orange));
  border-radius: 24px;
  padding: 60px 40px;
  color: var(--pure-white);
  position: relative;
  overflow: hidden;
}

.smart-cta-section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.smart-cta-section > * {
  position: relative;
  z-index: 2;
}

.cta-title {
  font-size: 2.4rem;
  font-weight: 700;
  margin-bottom: 16px;
  text-shadow: 0 2px 8px rgba(0,0,0,0.2);
}

.cta-subtitle {
  font-size: 1.2rem;
  opacity: 0.9;
  margin-bottom: 32px;
  font-weight: 400;
}

.cta-button {
  display: inline-flex;
  align-items: center;
  gap: 12px;
  background: var(--pure-white);
  color: var(--primary-orange);
  padding: 16px 32px;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 700;
  font-size: 1.1rem;
  transition: var(--transition);
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
}

.cta-button:hover {
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 8px 24px rgba(0,0,0,0.2);
  color: var(--primary-orange-dark);
}

.cta-button::after {
  content: 'â†’';
  font-size: 1.2rem;
  transition: var(--transition);
}

.cta-button:hover::after {
  transform: translateX(4px);
}

@media (max-width: 768px) {
  .parts-smart-tips-section {
    padding: 80px 0;
  }
  
  .parts-smart-tips-section .container {
    padding: 0 16px;
  }
  
  .parts-smart-tips-section h2 {
    font-size: 2.4rem;
    margin-bottom: 60px;
  }
  
  .smart-tips-grid {
    grid-template-columns: 1fr;
    gap: 24px;
    margin-bottom: 40px;
  }
  
  .smart-tip-card {
    padding: 32px 24px;
  }
  
  .tip-icon-wrapper {
    width: 60px;
    height: 60px;
  }
  
  .tip-icon {
    font-size: 1.8rem;
  }
  
  .tip-title {
    font-size: 1.5rem;
  }
  
  .tip-description {
    font-size: 1rem;
  }
  
  .smart-cta-section {
    padding: 40px 24px;
  }
  
  .cta-title {
    font-size: 1.8rem;
  }
  
  .cta-subtitle {
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .parts-smart-tips-section h2 {
    font-size: 2rem;
  }
  
  .smart-tip-card {
    padding: 24px 20px;
  }
  
  .tip-stats {
    flex-direction: column;
    gap: 16px;
  }
}
</style>

