  <script>
    (function(){
      var backdrop = document.getElementById('pf-modal-backdrop');
      function openModal(key){
        var id = 'pf-modal-' + key;
        var m = document.getElementById(id); if(!m) return;
        m.classList.add('open'); backdrop.classList.add('open');
        m.setAttribute('aria-hidden','false');
        document.body.classList.add('pf-modal-open');
      }
      function closeAll(){
        document.querySelectorAll('.pf-modal.open').forEach(function(m){ m.classList.remove('open'); m.setAttribute('aria-hidden','true'); });
        backdrop.classList.remove('open');
        document.body.classList.remove('pf-modal-open');
      }
      document.addEventListener('click', function(e){
        var t = e.target.closest('[data-pf-modal]');
        if(t){ e.preventDefault(); openModal(t.getAttribute('data-pf-modal')); }
        if(e.target.hasAttribute('data-pf-close') || e.target === backdrop){ closeAll(); }
      });
      document.addEventListener('keydown', function(e){ if(e.key === 'Escape') closeAll(); });
      function openFromHash(){
        var h = (location.hash||'').replace('#','').toLowerCase();
  var allowed = ['privacy','cookies','terms','delivery','returns','warranty','about','model','sitemap'];
        if(allowed.indexOf(h) > -1){ openModal(h); }
      }
      window.addEventListener('hashchange', openFromHash);
      openFromHash();
    })();
    </script>
