{%- comment -%}
  Related Products Section - eSpares Style
{%- endcomment -%}

<style>
.espares-related-products {
  padding: 60px 0;
  background: #f8f9fa;
}

.espares-related-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.espares-related-title {
  text-align: center;
  font-size: 2rem;
  font-weight: 600;
  color: #212529;
  margin-bottom: 40px;
}

.espares-related-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 25px;
}

.espares-related-card {
  background: #ffffff;
  border: 1px solid #dee2e6;
  border-radius: 8px;
  padding: 20px;
  text-align: center;
  transition: all 0.3s ease;
}

.espares-related-card:hover {
  border-color: #007bff;
  box-shadow: 0 4px 12px rgba(0, 123, 255, 0.15);
  transform: translateY(-3px);
}

.espares-related-image {
  width: 100%;
  height: 180px;
  object-fit: contain;
  margin-bottom: 15px;
  border-radius: 4px;
}

.espares-related-title-text {
  font-size: 1rem;
  font-weight: 500;
  color: #212529;
  margin-bottom: 10px;
  line-height: 1.4;
}

.espares-related-price {
  font-size: 1.25rem;
  font-weight: 600;
  color: #007bff;
  margin-bottom: 15px;
}

.espares-related-btn {
  background: #ffc107;
  color: #212529;
  border: none;
  padding: 10px 20px;
  border-radius: 4px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
  text-decoration: none;
  display: inline-block;
}

.espares-related-btn:hover {
  background: #e0a800;
  color: #212529;
  text-decoration: none;
  transform: translateY(-1px);
}

@media (max-width: 768px) {
  .espares-related-products {
    padding: 40px 0;
  }
  
  .espares-related-grid {
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 15px;
  }
  
  .espares-related-card {
    padding: 15px;
  }
  
  .espares-related-image {
    height: 150px;
  }
}
</style>

<div class="espares-related-products">
  <div class="espares-related-container">
    <h2 class="espares-related-title">{{ section.settings.heading | default: "You may also like" }}</h2>
    
    <div class="espares-related-grid">
      {%- assign mock_related = "Universal Drain Hose|$16.99|$22.99,Door Handle Kit|$28.99|$35.99,Filter Replacement Set|$19.99|$24.99,Motor Brush Set|$12.99|$18.99,Detergent Drawer|$15.99|$20.99,Water Pump Assembly|$45.99|$55.99,Temperature Sensor|$22.99|$28.99,Control Panel|$65.99|$75.99" | split: ',' -%}
      
      {%- for item in mock_related limit: section.settings.products_to_show -%}
        {%- assign product_data = item | split: '|' -%}
        <div class="espares-related-card">
          <a href="/products/mock-related-{{ forloop.index }}">
            <img class="espares-related-image" 
                 src="https://via.placeholder.com/250x180/f8f9fa/666?text={{ product_data[0] | url_encode }}" 
                 alt="{{ product_data[0] }}"
                 loading="lazy">
            
            <h3 class="espares-related-title-text">{{ product_data[0] }}</h3>
            
            <div class="espares-related-price">
              {{ product_data[1] }}
              <span style="text-decoration: line-through; color: #6c757d; font-size: 0.9rem; margin-left: 8px;">
                {{ product_data[2] }}
              </span>
            </div>
          </a>
          
          <a href="/products/mock-related-{{ forloop.index }}" class="espares-related-btn">
            View Details
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Related Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "You may also like"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 2,
      "label": "Products to show",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": true
    }
  ]
}
{% endschema %}
