{%- comment -%}
  Related Products Section - PartsFix Modern Style
{%- endcomment -%}

<style>
:root {
  --primary-orange: #ff6b35;
  --primary-orange-light: #ff8a5e;
  --primary-orange-dark: #e55a2b;
  --accent-orange: #ffab47;
  --pure-white: #ffffff;
  --light-gray: #f8f9fa;
  --border-gray: #e9ecef;
  --text-dark: #2c3e50;
  --text-muted: #6c757d;
  --shadow-light: 0 2px 12px rgba(255, 107, 53, 0.1);
  --shadow-medium: 0 4px 20px rgba(255, 107, 53, 0.15);
  --border-radius: 12px;
  --border-radius-small: 6px;
  --transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.parts-related-products {
  padding: 80px 0;
  background: linear-gradient(135deg, var(--pure-white), var(--light-gray));
  position: relative;
}

.parts-related-products::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
}

.parts-related-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 24px;
}

.parts-related-title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 800;
  color: var(--text-dark);
  margin-bottom: 60px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  position: relative;
}

.parts-related-title::after {
  content: '';
  position: absolute;
  bottom: -20px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
  border-radius: 2px;
}

.parts-related-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 32px;
}

.parts-related-card {
  background: var(--pure-white);
  border: 2px solid transparent;
  border-radius: var(--border-radius);
  padding: 24px;
  text-align: center;
  transition: var(--transition);
  box-shadow: var(--shadow-light);
  position: relative;
  overflow: hidden;
}

.parts-related-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 107, 53, 0.1), transparent);
  transition: left 0.6s ease;
}

.parts-related-card:hover {
  border-color: var(--primary-orange);
  box-shadow: var(--shadow-medium);
  transform: translateY(-8px);
}

.parts-related-card:hover::before {
  left: 100%;
}

.parts-related-image {
  width: 100%;
  height: 200px;
  object-fit: contain;
  margin-bottom: 20px;
  border-radius: var(--border-radius-small);
  transition: var(--transition);
}

.parts-related-card:hover .parts-related-image {
  transform: scale(1.05);
}

.parts-related-title-text {
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text-dark);
  margin-bottom: 16px;
  line-height: 1.5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  min-height: 50px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.parts-related-price {
  font-size: 1.4rem;
  font-weight: 700;
  color: var(--primary-orange);
  margin-bottom: 20px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.parts-related-price span {
  text-decoration: line-through;
  color: var(--text-muted);
  font-size: 1rem;
  font-weight: 500;
  margin-left: 10px;
}

.parts-related-btn {
  background: linear-gradient(135deg, var(--primary-orange), var(--primary-orange-light));
  color: var(--pure-white);
  border: none;
  padding: 14px 28px;
  border-radius: var(--border-radius);
  font-weight: 700;
  font-size: 15px;
  cursor: pointer;
  transition: var(--transition);
  text-decoration: none;
  display: inline-block;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  position: relative;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.parts-related-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.parts-related-btn:hover {
  background: linear-gradient(135deg, var(--primary-orange-dark), var(--primary-orange));
  color: var(--pure-white);
  text-decoration: none;
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 107, 53, 0.4);
}

.parts-related-btn:hover::before {
  left: 100%;
}

@media (max-width: 768px) {
  .parts-related-products {
    padding: 60px 0;
  }
  
  .parts-related-container {
    padding: 0 16px;
  }
  
  .parts-related-title {
    font-size: 2rem;
    margin-bottom: 40px;
  }
  
  .parts-related-grid {
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }
  
  .parts-related-card {
    padding: 20px;
  }
  
  .parts-related-image {
    height: 180px;
  }
}

@media (max-width: 480px) {
  .parts-related-title {
    font-size: 1.8rem;
  }
  
  .parts-related-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .parts-related-card {
    padding: 16px;
  }
  
  .parts-related-btn {
    padding: 12px 24px;
    font-size: 14px;
  }
}
</style>

<div class="parts-related-products">
  <div class="parts-related-container">
    <h2 class="parts-related-title">{{ section.settings.heading | default: "You may also like" }}</h2>
    
    <div class="parts-related-grid">
      {%- assign mock_related = "Universal Drain Hose|$16.99|$22.99,Door Handle Kit|$28.99|$35.99,Filter Replacement Set|$19.99|$24.99,Motor Brush Set|$12.99|$18.99,Detergent Drawer|$15.99|$20.99,Water Pump Assembly|$45.99|$55.99,Temperature Sensor|$22.99|$28.99,Control Panel|$65.99|$75.99" | split: ',' -%}
      
      {%- for item in mock_related limit: section.settings.products_to_show -%}
        {%- assign product_data = item | split: '|' -%}
        <div class="parts-related-card">
          <a href="/products/mock-related-{{ forloop.index }}">
            <img class="parts-related-image" 
                 src="https://via.placeholder.com/280x200/f8f9fa/ff6b35?text={{ product_data[0] | url_encode }}" 
                 alt="{{ product_data[0] }}"
                 loading="lazy"
                 width="280" height="200">
            
            <h3 class="parts-related-title-text">{{ product_data[0] }}</h3>
            
            <div class="parts-related-price">
              {{ product_data[1] }}
              <span>{{ product_data[2] }}</span>
            </div>
          </a>
          
          <a href="/products/mock-related-{{ forloop.index }}" class="parts-related-btn">
            View Details
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Related Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "You may also like"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 2,
      "label": "Products to show",
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": true
    }
  ]
}
{% endschema %}
