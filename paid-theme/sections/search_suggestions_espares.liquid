      </div>
    </div>
  </div>
</div>
{%- endif -%}

<script>
// Track popular search clicks
document.addEventListener('DOMContentLoaded', function() {
  const popularTags = document.querySelectorAll('.espares-popular-tag');
  
  popularTags.forEach(tag => {
    tag.addEventListener('click', function(e) {
      const searchTerm = this.textContent.trim();
      console.log('Popular search clicked:', searchTerm);
      
      // Optional: Track analytics
      if (typeof gtag !== 'undefined') {
        gtag('event', 'search', {
          'search_term': searchTerm,
          'source': 'popular_suggestions'
        });
      }
    });
  });
  
  // Track help button clicks
  const helpButtons = document.querySelectorAll('.espares-help-button');
  
  helpButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      const buttonType = this.querySelector('span:last-child').textContent.trim();
      console.log('Help button clicked:', buttonType);
      
      // Optional: Track analytics
      if (typeof gtag !== 'undefined') {
        gtag('event', 'click', {
          'button_type': buttonType,
          'section': 'search_help'
        });
      }
    });
  });
});
</script>

