<style>
:root {
  --primary-orange: #ff6b35;
  --primary-orange-light: #ff8a5e;
  --primary-orange-dark: #e55a2b;
  --accent-orange: #ffab47;
  --pure-white: #ffffff;
  --light-gray: #f8f9fa;
  --border-gray: #e9ecef;
  --text-dark: #2c3e50;
  --text-muted: #6c757d;
  --shadow-light: 0 2px 12px rgba(255, 107, 53, 0.1);
  --shadow-medium: 0 4px 20px rgba(255, 107, 53, 0.15);
  --border-radius: 12px;
  --border-radius-small: 6px;
  --transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.parts-product-main {
  padding: 40px 0;
  background: linear-gradient(135deg, var(--pure-white), var(--light-gray));
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.parts-product-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 24px;
}

.parts-product-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 80px;
  align-items: start;
}

/* Product Images */
.parts-product-media {
  position: sticky;
  top: 20px;
}

.parts-main-image {
  width: 100%;
  height: 450px;
  object-fit: contain;
  border: 2px solid var(--border-gray);
  border-radius: var(--border-radius);
  margin-bottom: 20px;
  cursor: zoom-in;
  transition: var(--transition);
  box-shadow: var(--shadow-light);
}

.parts-main-image:hover {
  border-color: var(--primary-orange);
  box-shadow: var(--shadow-medium);
}

.parts-thumbnail-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(90px, 1fr));
  gap: 12px;
}

.parts-thumbnail {
  width: 90px;
  height: 90px;
  object-fit: contain;
  border: 2px solid var(--border-gray);
  border-radius: var(--border-radius-small);
  cursor: pointer;
  transition: var(--transition);
  box-shadow: var(--shadow-light);
}

.parts-thumbnail:hover,
.parts-thumbnail.active {
  border-color: var(--primary-orange);
  transform: scale(1.05);
  box-shadow: var(--shadow-medium);
}

/* Product Info */
.parts-product-info h1 {
  font-size: 2.2rem;
  font-weight: 800;
  color: var(--text-dark);
  margin-bottom: 20px;
  line-height: 1.3;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.parts-product-vendor {
  color: var(--primary-orange);
  font-weight: 700;
  margin-bottom: 12px;
  text-decoration: none;
  font-size: 1.1rem;
  transition: var(--transition);
}

.parts-product-vendor:hover {
  color: var(--primary-orange-dark);
  text-decoration: underline;
}

.parts-product-sku {
  color: var(--text-muted);
  font-size: 0.95rem;
  margin-bottom: 20px;
  font-weight: 500;
}

.parts-product-price {
  margin-bottom: 30px;
  padding: 20px;
  background: var(--pure-white);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-light);
  border: 2px solid transparent;
  transition: var(--transition);
}

.parts-product-price:hover {
  border-color: var(--primary-orange);
}

.parts-current-price {
  font-size: 2.5rem;
  font-weight: 800;
  color: var(--primary-orange);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.parts-compare-price {
  font-size: 1.4rem;
  color: var(--text-muted);
  text-decoration: line-through;
  margin-left: 12px;
  font-weight: 600;
}

.parts-savings {
  display: inline-block;
  background: linear-gradient(135deg, var(--primary-orange), var(--primary-orange-dark));
  color: var(--pure-white);
  padding: 6px 12px;
  border-radius: var(--border-radius-small);
  font-size: 0.85rem;
  font-weight: 700;
  margin-left: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: var(--shadow-light);
}

.parts-product-form {
  margin-bottom: 40px;
  padding: 24px;
  background: var(--pure-white);
  border-radius: var(--border-radius);
  box-shadow: var(--shadow-light);
  border: 2px solid transparent;
  transition: var(--transition);
}

.parts-product-form:hover {
  border-color: var(--primary-orange);
}

.parts-variant-select,
.parts-quantity-input {
  width: 100%;
  padding: 16px;
  border: 2px solid var(--border-gray);
  border-radius: var(--border-radius-small);
  font-size: 1rem;
  margin-bottom: 20px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  transition: var(--transition);
  font-weight: 500;
}

.parts-variant-select:focus,
.parts-quantity-input:focus {
  outline: none;
  border-color: var(--primary-orange);
  box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.1);
}

.parts-add-to-cart {
  width: 100%;
  background: linear-gradient(135deg, var(--primary-orange), var(--primary-orange-light));
  color: var(--pure-white);
  border: none;
  padding: 18px 24px;
  border-radius: var(--border-radius);
  font-size: 1.2rem;
  font-weight: 700;
  cursor: pointer;
  transition: var(--transition);
  margin-bottom: 16px;
  text-transform: uppercase;
  letter-spacing: 1px;
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-medium);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.parts-add-to-cart::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.parts-add-to-cart:hover {
  background: linear-gradient(135deg, var(--primary-orange-dark), var(--primary-orange));
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 107, 53, 0.4);
}

.parts-add-to-cart:hover::before {
  left: 100%;
}

.parts-buy-now {
  width: 100%;
  background: var(--text-dark);
  color: var(--pure-white);
  border: none;
  padding: 16px 24px;
  border-radius: var(--border-radius);
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: var(--transition);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  box-shadow: var(--shadow-light);
}

.parts-buy-now:hover {
  background: #1a2332;
  transform: translateY(-1px);
  box-shadow: var(--shadow-medium);
}

.parts-delivery-info {
  background: #f8f9fa;
  border-radius: 6px;
  padding: 15px;
  margin: 20px 0;
}

.parts-delivery-item {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
  font-size: 0.9rem;
  color: #495057;
}

.parts-delivery-item:last-child {
  margin-bottom: 0;
}

.parts-delivery-icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
  color: #28a745;
}

.parts-product-description {
  margin-top: 30px;
}

.parts-description-tabs {
  border-bottom: 1px solid #dee2e6;
  margin-bottom: 20px;
}

.parts-tab-button {
  background: none;
  border: none;
  padding: 12px 20px;
  margin-right: 10px;
  font-size: 1rem;
  color: #6c757d;
  cursor: pointer;
  border-bottom: 2px solid transparent;
  transition: all 0.2s ease;
}

.parts-tab-button.active {
  color: #007bff;
  border-bottom-color: #007bff;
}

.parts-tab-content {
  display: none;
  line-height: 1.6;
}

.parts-tab-content.active {
  display: block;
}

.parts-specs-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 15px;
}

.parts-specs-table th,
.parts-specs-table td {
  padding: 10px;
  text-align: left;
  border-bottom: 1px solid #dee2e6;
}

.parts-specs-table th {
  background: #f8f9fa;
  font-weight: 600;
  width: 30%;
}

/* Responsive */
@media (max-width: 992px) {
  .parts-product-grid {
    grid-template-columns: 1fr;
    gap: 30px;
  }
  
  .parts-product-media {
    position: static;
  }
}

@media (max-width: 768px) {
  .parts-product-main {
    padding: 20px 0;
  }
  
  .parts-product-container {
    padding: 0 15px;
  }
  
  .parts-main-image {
    height: 300px;
  }
  
  .parts-product-info h1 {
    font-size: 1.5rem;
  }
  
  .parts-current-price {
    font-size: 1.6rem;
  }
}
</style>

<div class="parts-product-main">
  <div class="parts-product-container">
    <div class="parts-product-grid">
      <!-- Product Images -->
      <div class="parts-product-media">
        {%- if product.media.size > 0 -%}
          <img id="mainImage" 
               class="parts-main-image" 
               src="{{ product.featured_media | image_url: width: 600 }}" 
               alt="{{ product.featured_media.alt | escape }}"
               width="600" height="400"
               onclick="openImageModal(this.src)">
          
          {%- if product.media.size > 1 -%}
            <div class="parts-thumbnail-grid">
              {%- for media in product.media -%}
                <img class="parts-thumbnail {% if forloop.first %}active{% endif %}" 
                     src="{{ media | image_url: width: 100 }}" 
                     alt="{{ media.alt | escape }}"
                     width="100" height="100"
                     onclick="changeMainImage(this, '{{ media | image_url: width: 600 }}')">
              {%- endfor -%}
            </div>
          {%- endif -%}
        {%- else -%}
          <!-- Mock Images for Testing -->
          <img id="mainImage" 
               class="parts-main-image" 
               src="https://via.placeholder.com/600x400/f8f9fa/ff6b35?text=Product+Image" 
               alt="Product Image"
               width="600" height="400"
               onclick="openImageModal(this.src)">
          
          <div class="parts-thumbnail-grid">
            <img class="parts-thumbnail active" 
                 src="https://via.placeholder.com/100x100/f8f9fa/ff6b35?text=1" 
                 alt="Image 1"
                 width="100" height="100"
                 onclick="changeMainImage(this, 'https://via.placeholder.com/600x400/f8f9fa/ff6b35?text=Product+Image')">
            <img class="parts-thumbnail" 
                 src="https://via.placeholder.com/100x100/f8f9fa/ff6b35?text=2" 
                 alt="Image 2"
                 width="100" height="100"
                 onclick="changeMainImage(this, 'https://via.placeholder.com/600x400/f8f9fa/ff6b35?text=Side+View')">
            <img class="parts-thumbnail" 
                 src="https://via.placeholder.com/100x100/f8f9fa/ff6b35?text=3" 
                 alt="Image 3"
                 width="100" height="100"
                 onclick="changeMainImage(this, 'https://via.placeholder.com/600x400/f8f9fa/666?text=Back+View')">
          </div>
        {%- endif -%}
      </div>

      <!-- Product Info -->
      <div class="parts-product-info">
        {%- if product.vendor != blank -%}
          <a href="{{ routes.collections_url }}/{{ product.vendor | handleize }}" class="parts-product-vendor">
            {{ product.vendor }}
          </a>
        {%- else -%}
          <a href="{{ routes.collections_url }}/universal-parts" class="parts-product-vendor">Universal Parts</a>
        {%- endif -%}
        
        <h1>
          {%- if product.title != blank -%}
            {{ product.title }}
          {%- else -%}
            Universal Washing Machine Door Seal - Premium Quality
          {%- endif -%}
        </h1>
        
        <div class="parts-product-sku">
          {%- if product.selected_or_first_available_variant.sku != blank -%}
            SKU: {{ product.selected_or_first_available_variant.sku }}
          {%- else -%}
            SKU: ESP-WM-SEAL-001
          {%- endif -%}
        </div>
        
        <div class="parts-product-price">
          {%- if product.price -%}
            <span class="parts-current-price">{{ product.selected_or_first_available_variant.price | money }}</span>
            {%- if product.selected_or_first_available_variant.compare_at_price > product.selected_or_first_available_variant.price -%}
              <span class="parts-compare-price">{{ product.selected_or_first_available_variant.compare_at_price | money }}</span>
              <span class="parts-savings">
                Save {{ product.selected_or_first_available_variant.compare_at_price | minus: product.selected_or_first_available_variant.price | money }}
              </span>
            {%- endif -%}
          {%- else -%}
            <span class="parts-current-price">$24.99</span>
            <span class="parts-compare-price">$34.99</span>
            <span class="parts-savings">Save $10.00</span>
          {%- endif -%}
        </div>

        <form class="parts-product-form" action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data">
          {%- unless product.has_only_default_variant -%}
            <select name="id" class="parts-variant-select">
              {%- for variant in product.variants -%}
                <option value="{{ variant.id }}"
                        {% if variant == product.selected_or_first_available_variant %}selected="selected"{% endif %}
                        {% unless variant.available %}disabled{% endunless %}>
                  {{ variant.title }}
                  {%- if variant.available -%}
                    - {{ variant.price | money }}
                  {%- else -%}
                    - Sold out
                  {%- endif -%}
                </option>
              {%- endfor -%}
            </select>
          {%- else -%}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
          {%- endunless -%}
          
          <input type="number" name="quantity" value="1" min="1" class="parts-quantity-input" id="quantity">
          
          <button type="submit" class="parts-add-to-cart"
                  {% unless product.available %}disabled{% endunless %}>
            {%- if product.available -%}
              Add to Cart - {{ product.selected_or_first_available_variant.price | money }}
            {%- else -%}
              Sold Out
            {%- endif -%}
          </button>
        </form>
        
        <button class="parts-buy-now" onclick="buyNow()">
          Buy Now with Fast Checkout
        </button>
        
        <div class="parts-delivery-info">
          <div class="parts-delivery-item">
            <span class="parts-delivery-icon">🚚</span>
            <span>Free delivery on orders over $50</span>
          </div>
          <div class="parts-delivery-item">
            <span class="parts-delivery-icon">⚡</span>
            <span>Next day delivery available</span>
          </div>
          <div class="parts-delivery-item">
            <span class="parts-delivery-icon">↩️</span>
            <span>365 day returns policy</span>
          </div>
          <div class="parts-delivery-item">
            <span class="parts-delivery-icon">🔧</span>
            <span>Expert fitting advice available</span>
          </div>
        </div>

        <div class="parts-product-description">
          <div class="parts-description-tabs">
            <button class="parts-tab-button active" onclick="openTab(event, 'description')">Description</button>
            <button class="parts-tab-button" onclick="openTab(event, 'specifications')">Specifications</button>
            <button class="parts-tab-button" onclick="openTab(event, 'compatibility')">Compatibility</button>
            <button class="parts-tab-button" onclick="openTab(event, 'fitting')">Fitting Guide</button>
          </div>
          
          <div id="description" class="parts-tab-content active">
            {%- if product.description != blank -%}
              {{ product.description }}
            {%- else -%}
              <p>This universal washing machine door seal is designed to fit most major brands including Bosch, Samsung, LG, and Whirlpool. Made from high-quality rubber material that's resistant to detergents and high temperatures.</p>
              <p><strong>Key Features:</strong></p>
              <ul>
                <li>Universal fit for most washing machine brands</li>
                <li>Premium rubber construction</li>
                <li>Easy to install with step-by-step guide</li>
                <li>Prevents water leaks and maintains efficiency</li>
                <li>12-month warranty included</li>
              </ul>
            {%- endif -%}
          </div>
          
          <div id="specifications" class="parts-tab-content">
            <table class="parts-specs-table">
              <tr><th>Material</th><td>High-grade EPDM Rubber</td></tr>
              <tr><th>Color</th><td>Black</td></tr>
              <tr><th>Dimensions</th><td>External: 34cm, Internal: 25cm</td></tr>
              <tr><th>Weight</th><td>850g</td></tr>
              <tr><th>Temperature Range</th><td>-20°C to +120°C</td></tr>
              <tr><th>Warranty</th><td>12 months</td></tr>
              <tr><th>Certifications</th><td>CE, RoHS compliant</td></tr>
            </table>
          </div>
          
          <div id="compatibility" class="parts-tab-content">
            <p><strong>Compatible Brands:</strong></p>
            <ul>
              <li>Bosch - WAW28*, WAW32*, WAG28*</li>
              <li>Samsung - WW80*, WW90*, WW10*</li>
              <li>LG - F4V*, F2V*, F4J*</li>
              <li>Whirlpool - FSCR*, AWE*, WTLS*</li>
              <li>Hotpoint - NSWM*, WMFUG*, WMEUF*</li>
            </ul>
            <p><strong>Note:</strong> Please check your model number before ordering. If unsure, contact our expert team for advice.</p>
          </div>
          
          <div id="fitting" class="parts-tab-content">
            <p><strong>Tools Required:</strong> Screwdriver, pliers, towel</p>
            <p><strong>Estimated Time:</strong> 30-45 minutes</p>
            <ol>
              <li>Disconnect power and water supply</li>
              <li>Open the washing machine door</li>
              <li>Remove the door boot clamp carefully</li>
              <li>Pull out the old door seal</li>
              <li>Clean the door frame thoroughly</li>
              <li>Install the new seal ensuring proper alignment</li>
              <li>Secure with the clamp and test</li>
            </ol>
            <p><strong>Video guide available:</strong> <a href="#" style="color: #007bff;">Watch installation video</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function changeMainImage(thumbnail, newSrc) {
  document.getElementById('mainImage').src = newSrc;
  
  // Update active thumbnail
  document.querySelectorAll('.parts-thumbnail').forEach(t => t.classList.remove('active'));
  thumbnail.classList.add('active');
}

function openImageModal(src) {
  // Simple image modal
  const modal = document.createElement('div');
  modal.innerHTML = `
    <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); z-index: 9999; display: flex; align-items: center; justify-content: center;" onclick="this.remove()">
      <img src="${src}" style="max-width: 90%; max-height: 90%; object-fit: contain;">
    </div>
  `;
  document.body.appendChild(modal);
}

function openTab(evt, tabName) {
  // Hide all tab contents
  document.querySelectorAll('.parts-tab-content').forEach(content => {
    content.classList.remove('active');
  });
  
  // Remove active class from all buttons
  document.querySelectorAll('.parts-tab-button').forEach(button => {
    button.classList.remove('active');
  });
  
  // Show selected tab and mark button as active
  document.getElementById(tabName).classList.add('active');
  evt.currentTarget.classList.add('active');
}

function buyNow() {
  // Add to cart and redirect to checkout
  const form = document.querySelector('.parts-product-form');
  const formData = new FormData(form);
  
  fetch('/cart/add.js', {
    method: 'POST',
    body: formData
  }).then(() => {
    window.location.href = '/checkout';
  });
}
</script>

