<style>
/* Modern Clean Footer - No conflicts */
.footer-clean {
  background: #f8f9fa;
  color: #333;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  border-top: 1px solid #e9ecef;
  padding: 60px 0 40px;
}

.footer-clean .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

.footer-clean .footer-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 40px;
  margin-bottom: 40px;
}

.footer-clean .footer-column h3 {
  color: #212529;
  font-weight: 700;
  font-size: 18px;
  margin: 0 0 20px;
}

.footer-clean .footer-links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-clean .footer-links li {
  margin-bottom: 12px;
}

.footer-clean .footer-links a {
  color: #6c757d;
  text-decoration: none;
  font-size: 15px;
  transition: color 0.2s;
}

.footer-clean .footer-links a:hover {
  color: #007bff;
}

.footer-clean .contact-info p {
  margin: 0 0 16px;
  line-height: 1.5;
  color: #6c757d;
  font-size: 15px;
}

.footer-clean .contact-section {
  margin-top: 24px;
}

.footer-clean .contact-section h4 {
  font-weight: 600;
  font-size: 16px;
  color: #212529;
  margin: 0 0 8px;
}

.footer-clean .contact-section p {
  margin: 0;
  color: #6c757d;
  font-size: 15px;
}

.footer-clean .newsletter-desc {
  color: #6c757d;
  margin: 0 0 24px;
  line-height: 1.5;
  font-size: 15px;
}

.footer-clean .newsletter-form {
  position: relative;
  display: flex;
}

.footer-clean .newsletter-input {
  flex: 1;
  padding: 12px 50px 12px 16px;
  border: 2px solid #dee2e6;
  border-radius: 6px;
  font-size: 15px;
  background: #fff;
  color: #333;
}

.footer-clean .newsletter-input:focus {
  outline: none;
  border-color: #007bff;
}

.footer-clean .newsletter-btn {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  background: #007bff;
  color: #fff;
  border: none;
  padding: 8px;
  border-radius: 4px;
  cursor: pointer;
}

.footer-clean .newsletter-btn:hover {
  background: #0056b3;
}

.footer-clean .footer-bottom {
  border-top: 1px solid #dee2e6;
  padding-top: 24px;
  text-align: center;
  color: #6c757d;
  font-size: 14px;
}

/* Responsive */
@media (max-width: 992px) {
  .footer-clean .footer-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 32px;
  }
}

@media (max-width: 576px) {
  .footer-clean .footer-grid {
    grid-template-columns: 1fr;
    gap: 32px;
  }
}
</style>

<div class="footer-clean">
  <div class="container">
    <div class="footer-grid">
      <!-- Where To Find Us Column -->
      <div class="footer-column">
        <h3>Where To Find Us</h3>
        <div class="contact-info">
          <p>Unit 2, Broughton Trade Centre,<br>
          Broughton Ln,<br>
          Salford, M7 1UH<br>
          United Kingdom</p>
          
          <div class="contact-section">
            <h4>Chat Support</h4>
            <p>Mon - Fri 9.00am - 5.00pm</p>
          </div>
          
          <div class="contact-section">
            <h4>Email</h4>
            <p>wecare@essentialsfix.co.uk</p>
          </div>
        </div>
      </div>

      <!-- Service For All Column -->
      <div class="footer-column">
        <h3>Service For All</h3>
        <ul class="footer-links">
          <li><a href="/pages/contact">Track Order</a></li>
          <li><a href="/pages/about-us">About Us</a></li>
          <li><a href="/pages/trade-application">Trade Application</a></li>
          <li><a href="/pages/returns">Returns & Refunds</a></li>
          <li><a href="/pages/contact">Contact Us</a></li>
          <li><a href="/pages/contact">Become A Supplier</a></li>
          <li><a href="/pages/contact">FAQs</a></li>
          <li><a href="/pages/contact">Blogs</a></li>
        </ul>
      </div>

      <!-- Schemes For All Column -->
      <div class="footer-column">
        <h3>Schemes For All</h3>
        <ul class="footer-links">
          <li><a href="/pages/privacy">Privacy Policy</a></li>
          <li><a href="/pages/terms">Terms Of Service</a></li>
          <li><a href="/pages/shipping">Shipping Policy</a></li>
        </ul>
      </div>

      <!-- Subscribe For All Column -->
      <div class="footer-column">
        <h3>Subscribe For All</h3>
        <p class="newsletter-desc">Sign up for exclusive offers, original stories, events and more.</p>
        
        <form class="newsletter-form" action="{{ routes.cart_add_url }}" method="post">
          <input type="email" 
                 name="contact[email]" 
                 class="newsletter-input" 
                 placeholder="Your email"
                 required>
          <button type="submit" class="newsletter-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
            </svg>
          </button>
          <input type="hidden" name="contact[tags]" value="newsletter">
        </form>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} eSpares - All rights reserved. The online store for all your parts and accessories.</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Clean Footer",
  "settings": []
}
{% endschema %}