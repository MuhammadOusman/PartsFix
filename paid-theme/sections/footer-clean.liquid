<style>
:root {
  --primary-orange: #ff6b35;
  --primary-orange-light: #ff8a5e;
  --primary-orange-dark: #e55a2b;
  --accent-orange: #ffab47;
  --pure-white: #ffffff;
  --light-gray: #f8f9fa;
  --border-gray: #e9ecef;
  --text-dark: #2c3e50;
  --text-muted: #6c757d;
  --shadow-light: 0 4px 12px rgba(255, 107, 53, 0.08);
  --shadow-medium: 0 6px 20px rgba(255, 107, 53, 0.12);
  --shadow-heavy: 0 10px 30px rgba(255, 107, 53, 0.15);
  --border-radius: 16px;
  --border-radius-small: 8px;
  --transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
}

/* PartsFix Modern Footer */
.parts-footer-wrap {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  color: var(--pure-white);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  position: relative;
  overflow: hidden;
}

.parts-footer-wrap::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange), var(--primary-orange));
  animation: footerTopFlow 8s ease-in-out infinite;
}

@keyframes footerTopFlow {
  0%, 100% { transform: translateX(-100px); }
  50% { transform: translateX(100px); }
}

.parts-footer-wrap::after {
  content: '';
  position: absolute;
  top: 20%;
  right: -10%;
  width: 400px;
  height: 400px;
  background: radial-gradient(circle, rgba(255, 107, 53, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: floatOrb 12s ease-in-out infinite;
}

@keyframes floatOrb {
  0%, 100% { transform: translate(0, 0) scale(1); }
  33% { transform: translate(-50px, -30px) scale(1.1); }
  66% { transform: translate(30px, -60px) scale(0.9); }
}

.parts-footer {
  padding: 80px 0 40px;
  position: relative;
  z-index: 2;
}

.parts-footer-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 24px;
}

.parts-footer-grid {
  display: grid;
  grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
  gap: 60px;
  margin-bottom: 60px;
}

.parts-footer-column {
  position: relative;
}

.parts-footer-heading {
  font-weight: 800;
  font-size: 1.4rem;
  color: var(--pure-white);
  margin: 0 0 32px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  position: relative;
  padding-bottom: 16px;
}

.parts-footer-heading::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 60px;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
  border-radius: 2px;
}

/* Contact Info Styling */
.parts-footer-contact {
  line-height: 1.8;
}

.parts-footer-contact p {
  margin: 0 0 20px;
  color: #bdc3c7;
  font-size: 1rem;
  font-weight: 400;
}

.parts-footer-contact strong {
  color: var(--pure-white);
  font-weight: 600;
}

.parts-contact-item {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: var(--border-radius);
  padding: 24px;
  margin-bottom: 20px;
  backdrop-filter: blur(10px);
  transition: var(--transition);
}

.parts-contact-item:hover {
  background: rgba(255, 107, 53, 0.1);
  border-color: rgba(255, 107, 53, 0.3);
  transform: translateY(-4px);
  box-shadow: var(--shadow-medium);
}

.parts-contact-item h4 {
  font-weight: 700;
  font-size: 1.1rem;
  color: var(--primary-orange);
  margin: 0 0 8px;
  display: flex;
  align-items: center;
  gap: 8px;
}

.parts-contact-item h4::before {
  content: '';
  width: 8px;
  height: 8px;
  background: var(--accent-orange);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.2); opacity: 0.7; }
}

.parts-contact-item p {
  margin: 0;
  color: #ecf0f1;
  font-size: 0.95rem;
}

/* Footer Links */
.parts-footer-links {
  list-style: none;
  margin: 0;
  padding: 0;
}

.parts-footer-links li {
  margin: 0 0 16px;
  transform: translateX(0);
  transition: var(--transition);
}

.parts-footer-links li:hover {
  transform: translateX(8px);
}

.parts-footer-links a {
  color: #bdc3c7;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  transition: var(--transition);
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px 0;
  border-radius: var(--border-radius-small);
}

.parts-footer-links a::before {
  content: 'â†’';
  font-size: 0.9rem;
  color: var(--primary-orange);
  transition: var(--transition);
  opacity: 0;
  transform: translateX(-10px);
}

.parts-footer-links a:hover {
  color: var(--pure-white);
  background: rgba(255, 107, 53, 0.1);
  padding-left: 16px;
}

.parts-footer-links a:hover::before {
  opacity: 1;
  transform: translateX(0);
}

/* Newsletter Section */
.parts-newsletter-section {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 24px;
  padding: 32px;
  backdrop-filter: blur(10px);
  position: relative;
  overflow: hidden;
}

.parts-newsletter-section::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 107, 53, 0.05) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.parts-newsletter-section > * {
  position: relative;
  z-index: 2;
}

.parts-newsletter-desc {
  color: #bdc3c7;
  margin: 0 0 24px;
  line-height: 1.6;
  font-size: 1rem;
}

.parts-newsletter-form {
  position: relative;
}

.parts-newsletter-input-wrapper {
  position: relative;
  display: flex;
  margin-bottom: 16px;
}

.parts-newsletter-input {
  flex: 1;
  padding: 16px 60px 16px 20px;
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: var(--border-radius);
  font-size: 1rem;
  background: rgba(255, 255, 255, 0.1);
  color: var(--pure-white);
  transition: var(--transition);
  backdrop-filter: blur(10px);
}

.parts-newsletter-input::placeholder {
  color: #bdc3c7;
}

.parts-newsletter-input:focus {
  outline: none;
  border-color: var(--primary-orange);
  background: rgba(255, 255, 255, 0.15);
  box-shadow: 0 0 0 4px rgba(255, 107, 53, 0.2);
}

.parts-newsletter-submit {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  background: linear-gradient(135deg, var(--primary-orange), var(--accent-orange));
  color: var(--pure-white);
  border: none;
  padding: 12px;
  border-radius: var(--border-radius-small);
  cursor: pointer;
  transition: var(--transition);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
}

.parts-newsletter-submit:hover {
  transform: translateY(-50%) scale(1.1);
  box-shadow: var(--shadow-medium);
}

.parts-newsletter-submit svg {
  width: 20px;
  height: 20px;
}

/* Sub Footer */
.parts-sub-footer {
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 40px;
  text-align: center;
  position: relative;
}

.parts-sub-footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 200px;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--primary-orange), transparent);
}

.parts-sub-footer p {
  color: #95a5a6;
  font-size: 0.95rem;
  margin: 0;
  font-weight: 400;
}

.parts-sub-footer strong {
  color: var(--primary-orange);
  font-weight: 700;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .parts-footer-grid {
    grid-template-columns: 1fr 1fr;
    gap: 40px;
  }
  
  .parts-footer {
    padding: 60px 0 40px;
  }
}

@media (max-width: 768px) {
  .parts-footer-container {
    padding: 0 16px;
  }
  
  .parts-footer-grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .parts-footer {
    padding: 50px 0 30px;
  }
  
  .parts-footer-heading {
    font-size: 1.2rem;
    margin-bottom: 24px;
  }
  
  .parts-contact-item {
    padding: 20px;
  }
  
  .parts-newsletter-section {
    padding: 24px;
  }
  
  .parts-newsletter-input {
    padding: 14px 50px 14px 16px;
  }
  
  .parts-newsletter-submit {
    width: 40px;
    height: 40px;
  }
}

@media (max-width: 480px) {
  .parts-footer-heading {
    font-size: 1.1rem;
  }
  
  .parts-footer-links a {
    font-size: 0.95rem;
  }
  
  .parts-newsletter-desc {
    font-size: 0.95rem;
  }
  
  .parts-sub-footer p {
    font-size: 0.9rem;
  }
}
</style>

