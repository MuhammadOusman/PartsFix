{%- comment -%}
  Recently Viewed Products Section
{%- endcomment -%}

<style>
.espares-recently-viewed {
  padding: 40px 0;
  background: #ffffff;
}

.espares-recently-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.espares-recently-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: #212529;
  margin-bottom: 30px;
}

.espares-recently-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 20px;
}

.espares-recently-card {
  background: #ffffff;
  border: 1px solid #dee2e6;
  border-radius: 6px;
  padding: 15px;
  text-align: center;
  transition: all 0.3s ease;
}

.espares-recently-card:hover {
  border-color: #007bff;
  transform: translateY(-2px);
}

.espares-recently-image {
  width: 100%;
  height: 120px;
  object-fit: contain;
  margin-bottom: 10px;
}

.espares-recently-name {
  font-size: 0.9rem;
  font-weight: 500;
  color: #212529;
  margin-bottom: 8px;
  line-height: 1.3;
}

.espares-recently-price {
  font-size: 1rem;
  font-weight: 600;
  color: #007bff;
}
</style>

<div class="espares-recently-viewed">
  <div class="espares-recently-container">
    <h2 class="espares-recently-title">{{ section.settings.heading | default: "Recently viewed" }}</h2>
    
    <div class="espares-recently-grid">
      {%- assign recently_viewed = "Washing Machine Belt|$18.99,Oven Door Glass|$35.99,Refrigerator Bulb|$8.99,Vacuum Bag Set|$12.99,Microwave Turntable|$25.99,Dryer Lint Filter|$16.99" | split: ',' -%}
      
      {%- for item in recently_viewed limit: section.settings.products_to_show -%}
        {%- assign product_data = item | split: '|' -%}
        <div class="espares-recently-card">
          <a href="/products/mock-recent-{{ forloop.index }}">
            <img class="espares-recently-image" 
                 src="https://via.placeholder.com/180x120/f8f9fa/666?text={{ product_data[0] | url_encode }}" 
                 alt="{{ product_data[0] }}"
                 loading="lazy"
                 width="180" height="120">
            
            <div class="espares-recently-name">{{ product_data[0] }}</div>
            <div class="espares-recently-price">{{ product_data[1] }}</div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Recently Viewed",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Recently viewed"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 3,
      "max": 12,
      "step": 3,
      "label": "Products to show",
      "default": 6
    }
  ]
}
{% endschema %}
