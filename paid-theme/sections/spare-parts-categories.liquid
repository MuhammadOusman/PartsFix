{%- assign categories = section.settings.categories | split: '|' -%}
{%- if categories == blank or categories.size == 0 or categories[0] == blank -%}
  {%- assign categories = "Cooker|Cooker Hood|Dishwasher|Fridge|Microwave|Tumble Dryer|Vacuum Cleaner|Washing Machine|Blender & Mixer|Coffee Machine|Lawnmower|Pressure Washer" | split: '|' -%}
{%- endif -%}

<style>
.espares-categories-section {
  padding: 60px 0;
  background: white;
}

.espares-categories-section .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.espares-categories-section h2 {
  text-align: center;
  margin-bottom: 50px;
  font-size: 2.2rem;
  font-weight: 600;
  color: #333;
}

.categories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 25px;
  justify-items: center;
}

.category-item {
  background: white;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  width: 100%;
  max-width: 200px;
  position: relative;
}

.category-item:hover {
  transform: translateY(-8px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.15);
}

.category-item a {
  text-decoration: none;
  color: inherit;
  display: block;
}

.category-image {
  position: relative;
  overflow: hidden;
  height: 140px;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-image img {
  width: 80%;
  height: 80%;
  object-fit: contain;
  transition: transform 0.3s ease;
}

.category-item:hover .category-image img {
  transform: scale(1.05);
}

.category-content {
  padding: 15px;
  text-align: center;
}

.category-name {
  font-size: 1rem;
  font-weight: 600;
  color: #333;
  margin-bottom: 5px;
}

.category-description {
  font-size: 0.8rem;
  color: #666;
  line-height: 1.4;
}

@media (max-width: 768px) {
  .categories-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
  
  .category-item {
    max-width: none;
  }
  
  .category-image {
    height: 120px;
  }
  
  .category-content {
    padding: 12px;
  }
  
  .espares-categories-section h2 {
    font-size: 1.8rem;
    margin-bottom: 30px;
  }
}

@media (max-width: 480px) {
  .categories-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
  }
  
  .category-image {
    height: 100px;
  }
  
  .category-name {
    font-size: 0.9rem;
  }
  
  .category-description {
    font-size: 0.75rem;
  }
}
</style>

<div class="espares-categories-section">
  <div class="container">
    <h2>{{ section.settings.title | default: "Spare Parts By Category" }}</h2>
    <div class="categories-grid">
      {%- for category in categories -%}
        {%- assign category_slug = category | handleize -%}
        <div class="category-item">
          <a href="/search?q=*&type=product&filter.p.product_type={{ category_slug }}" title="{{ category }}">
            <div class="category-image">
              <img loading="lazy" src="https://via.placeholder.com/160x120/f8f9fa/666?text={{ category | url_encode }}" alt="{{ category }}" width="160" height="120"/>
            </div>
            <div class="category-content">
              <div class="category-name">{{ category }}</div>
              <div class="category-description">Parts & accessories</div>
            </div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

<script>
function showMockCategory(categoryName) {
