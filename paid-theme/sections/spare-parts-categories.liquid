{%- assign categories = section.settings.categories | split: '|' -%}
{%- if categories == blank or categories.size == 0 or categories[0] == blank -%}
  {%- assign categories = "Cooker|Cooker Hood|Dishwasher|Fridge|Microwave|Tumble Dryer|Vacuum Cleaner|Washing Machine|Blender & Mixer|Coffee Machine|Lawnmower|Pressure Washer" | split: '|' -%}
{%- endif -%}

<style>
:root {
  --primary-orange: #ff6b35;
  --primary-orange-light: #ff8a5e;
  --primary-orange-dark: #e55a2b;
  --accent-orange: #ffab47;
  --pure-white: #ffffff;
  --light-gray: #f8f9fa;
  --border-gray: #e9ecef;
  --text-dark: #2c3e50;
  --text-muted: #6c757d;
  --shadow-light: 0 4px 12px rgba(255, 107, 53, 0.08);
  --shadow-medium: 0 6px 20px rgba(255, 107, 53, 0.12);
  --shadow-heavy: 0 10px 30px rgba(255, 107, 53, 0.15);
  --border-radius: 16px;
  --border-radius-small: 8px;
  --transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.parts-categories-section {
  padding: 80px 0;
  background: linear-gradient(135deg, var(--pure-white) 0%, var(--light-gray) 100%);
  position: relative;
  overflow: hidden;
}

.parts-categories-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
}

.parts-categories-section .container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 24px;
}

.parts-categories-section h2 {
  text-align: center;
  margin-bottom: 60px;
  font-size: 2.8rem;
  font-weight: 800;
  color: var(--text-dark);
  position: relative;
  padding-bottom: 20px;
}

.parts-categories-section h2::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80px;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
  border-radius: 2px;
}

.categories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 32px;
  justify-items: center;
  justify-content: center;
}

/* Special handling for grid with 12 items (5 items per row leaves 2 orphans) */
.categories-grid:has(.category-item:nth-child(12):last-child) {
  grid-template-columns: repeat(5, 1fr);
}

/* For screens where we can fit 5 items per row */
@media (min-width: 1200px) {
  .categories-grid {
    grid-template-columns: repeat(5, 1fr);
    max-width: 1400px;
    margin: 0 auto;
  }
  
  /* Center the last 2 items when they're orphaned */
  .categories-grid .category-item:nth-child(11) {
    grid-column: 2;
  }
  
  .categories-grid .category-item:nth-child(12) {
    grid-column: 4;
  }
}

/* For smaller screens, adjust grid */
@media (min-width: 992px) and (max-width: 1199px) {
  .categories-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media (min-width: 768px) and (max-width: 991px) {
  .categories-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  /* Center orphaned items on tablet when there are 1-2 remaining */
  .categories-grid .category-item:nth-child(10) {
    grid-column: 2;
  }
  
  .categories-grid .category-item:nth-child(11) {
    grid-column: 1;
  }
  
  .categories-grid .category-item:nth-child(12) {
    grid-column: 3;
  }
}

.category-item {
  background: var(--pure-white);
  border-radius: var(--border-radius);
  overflow: hidden;
  box-shadow: var(--shadow-light);
  transition: var(--transition);
  width: 100%;
  max-width: 280px;
  position: relative;
  border: 2px solid var(--border-gray);
  transform: translateZ(0);
}

.category-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
  transform: scaleX(0);
  transition: var(--transition);
  z-index: 1;
}

.category-item:hover {
  transform: translateY(-12px) scale(1.02);
  box-shadow: var(--shadow-heavy);
  border-color: var(--primary-orange);
}

.category-item:hover::before {
  transform: scaleX(1);
}

.category-item a {
  text-decoration: none;
  color: inherit;
  display: block;
  height: 100%;
}

.category-image {
  position: relative;
  overflow: hidden;
  height: 180px;
  background: linear-gradient(135deg, var(--light-gray), var(--border-gray));
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition);
}

.category-image img {
  width: 70%;
  height: 70%;
  object-fit: contain;
  transition: var(--transition);
  filter: grayscale(0.2);
}

.category-item:hover .category-image {
  background: linear-gradient(135deg, var(--primary-orange), var(--accent-orange));
}

.category-item:hover .category-image img {
  transform: scale(1.1) rotate(2deg);
  filter: grayscale(0) brightness(1.1);
}

.category-content {
  padding: 24px;
  text-align: center;
  background: var(--pure-white);
  position: relative;
}

.category-name {
  font-size: 1.3rem;
  font-weight: 700;
  color: var(--text-dark);
  margin-bottom: 8px;
  transition: var(--transition);
}

.category-item:hover .category-name {
  color: var(--primary-orange);
}

.category-description {
  font-size: 1rem;
  color: var(--text-muted);
  line-height: 1.5;
  font-weight: 500;
  transition: var(--transition);
}

.category-item:hover .category-description {
  color: var(--text-dark);
}

.category-content::after {
  content: 'â†’';
  position: absolute;
  bottom: 24px;
  right: 24px;
  font-size: 1.2rem;
  color: var(--primary-orange);
  opacity: 0;
  transform: translateX(-10px);
  transition: var(--transition);
}

.category-item:hover .category-content::after {
  opacity: 1;
  transform: translateX(0);
}

@media (max-width: 768px) {
  .parts-categories-section {
    padding: 60px 0;
  }
  
  .parts-categories-section .container {
    padding: 0 16px;
  }
  
  .categories-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
  
  /* Center orphaned items on mobile */
  .categories-grid .category-item:nth-child(odd):last-child {
    grid-column: 1 / -1;
    max-width: 280px;
    margin: 0 auto;
  }
  
  .category-item {
    max-width: none;
  }
  
  .category-image {
    height: 140px;
  }
  
  .category-content {
    padding: 20px 16px;
  }
  
  .parts-categories-section h2 {
    font-size: 2.2rem;
    margin-bottom: 40px;
  }
  
  .category-name {
    font-size: 1.1rem;
  }
  
  .category-description {
    font-size: 0.9rem;
  }
}

@media (max-width: 480px) {
  .categories-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .category-image {
    height: 120px;
  }
  
  .category-name {
    font-size: 1rem;
  }
  
  .category-description {
    font-size: 0.85rem;
  }
  
  .parts-categories-section h2 {
    font-size: 1.8rem;
  }
}
</style>

<div class="parts-categories-section">
  <div class="container">
    <h2>{{ section.settings.title | default: "Spare Parts By Category" }}</h2>
    <div class="categories-grid">
      {%- for category in categories -%}
        {%- assign category_slug = category | handleize -%}
        <div class="category-item">
          <a href="/search?q=*&type=product&filter.p.product_type={{ category_slug }}" title="{{ category }}">
            <div class="category-image">
              <img loading="lazy" src="https://via.placeholder.com/160x120/f8f9fa/666?text={{ category | url_encode }}" alt="{{ category }}" width="160" height="120"/>
            </div>
            <div class="category-content">
              <div class="category-name">{{ category }}</div>
              <div class="category-description">Parts & accessories</div>
            </div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

