function showCategories(brandSlug, brandName) {
  // Hide brands grid and show categories
  document.getElementById('brands-grid').style.display = 'none';
  document.getElementById('view-all-section').style.display = 'none';
  document.getElementById('brand-categories').classList.add('active');
  
  // Update title
  document.getElementById('main-title').textContent = brandName + ' Spare Parts & Accessories';
  document.getElementById('brand-title').textContent = brandName + ' Categories';
  
  // Get categories for this brand or use default
  const categories = brandCategories[brandSlug] || brandCategories.default;
  
  // Generate categories grid
  const categoriesGrid = document.getElementById('categories-grid');
  categoriesGrid.innerHTML = '';
  
  categories.forEach(category => {
    const categoryCard = document.createElement('div');
    categoryCard.className = 'category-card';
    
    categoryCard.innerHTML = `
      <a href="/search?q=*&type=product&options[prefix]=last&filter.v.vendor=${brandSlug}&filter.p.product_type=${category.slug}" title="${brandName} ${category.name}">
        <div class="category-image">
          <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #ff6b35, #ffab47); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 0.8rem; text-align: center; border-radius: 20px;">${category.name}</div>
        </div>
        <h4 class="category-name">${category.name}</h4>
      </a>
    `;
    categoriesGrid.appendChild(categoryCard);
  });
  
  // Scroll to top of section
  document.querySelector('.parts-brands-section').scrollIntoView({ behavior: 'smooth' });
}

function showBrands() {
  // Hide categories and show brands grid
  document.getElementById('brand-categories').classList.remove('active');
  document.getElementById('brands-grid').style.display = 'grid';
  document.getElementById('view-all-section').style.display = 'block';
  
  // Reset title
  document.getElementById('main-title').textContent = 'Popular Brands';
  
  // Scroll to top of section
  document.querySelector('.parts-brands-section').scrollIntoView({ behavior: 'smooth' });
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
  // Add click handlers for brand cards if they don't have onclick
  const brandCards = document.querySelectorAll('.brand-card[data-brand]');
  brandCards.forEach(card => {
    if (!card.onclick) {
      const brand = card.getAttribute('data-brand');
      const brandName = card.querySelector('.brand-name').textContent;
      card.addEventListener('click', () => showCategories(brand, brandName));
    }
  });
});
