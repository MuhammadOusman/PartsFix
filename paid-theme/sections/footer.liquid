<script>
(function(){
  var backdrop = document.getElementById('pf-modal-backdrop');
  function show(id){
    var m = document.getElementById('pf-modal-' + id);
    if(!m) return; m.style.display='block'; backdrop.style.display='block'; document.body.style.overflow='hidden';
  }
  function hideAll(){
  ['about','model','sitemap'].forEach(function(k){ var m=document.getElementById('pf-modal-'+k); if(m) m.style.display='none'; });
    backdrop.style.display='none'; document.body.style.overflow='';
  }
  document.addEventListener('click', function(e){
    var t = e.target.closest('[data-pf-modal]');
  if(t && (['about','model','sitemap'].indexOf(t.getAttribute('data-pf-modal'))>-1)) { e.preventDefault(); show(t.getAttribute('data-pf-modal')); }
    if(e.target.hasAttribute('data-pf-close') || e.target===backdrop){ hideAll(); }
  });
  window.addEventListener('keydown', function(e){ if(e.key==='Escape') hideAll(); });
})();
</script>

