<style>
.footer-es-wrap {
  background: #333c47;
  color: #fff;
  padding: 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.footer-es-wrap .footer {
  padding: 50px 0 0;
}

.footer-es-wrap .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.footer-es-wrap .social-signup {
  padding-bottom: 30px;
  border-bottom: 1px solid #555;
  margin-bottom: 30px;
}

.footer-es-wrap .social {
  list-style: none;
  display: flex;
  gap: 20px;
  padding: 0;
  margin: 0;
  justify-content: center;
}

.footer-es-wrap .social li a {
  display: block;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #555;
  color: #fff;
  text-decoration: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18px;
  transition: background 0.3s;
}

.footer-es-wrap .social li a:hover {
  background: #ffd700;
  color: #333;
}

.footer-es-wrap .accordion-menu {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 40px 30px;
  margin-bottom: 40px;
}

.footer-es-wrap .accordion-menu .has-children {
  list-style: none;
}

.footer-es-wrap .accordion-menu h3 {
  display: block;
  color: #fff;
  font-weight: 600;
  font-size: 15px;
  margin-bottom: 12px;
  margin-top: 0;
}

.footer-es-wrap .accordion-menu ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-es-wrap .accordion-menu ul li {
  margin-bottom: 8px;
}

.footer-es-wrap .accordion-menu ul li a {
  color: #ccc;
  text-decoration: none;
  font-size: 13px;
  line-height: 1.4;
  transition: color 0.3s;
}

.footer-es-wrap .accordion-menu ul li a:hover {
  color: #ffd700;
}

.footer-es-wrap .sub-footer {
  background: #2c3540;
  margin: 0 -20px;
  padding: 30px 20px 20px;
}

.footer-es-wrap .footer-international-links {
  margin-bottom: 20px;
}

.footer-es-wrap .footer-international-links p {
  font-weight: 600;
  margin: 0 0 10px;
  font-size: 14px;
  color: #fff;
}

.footer-es-wrap .international-flag-links {
  list-style: none;
  display: flex;
  gap: 10px;
  padding: 0;
  margin: 6px 0 16px;
}

.footer-es-wrap .international-flag-links img {
  border-radius: 2px;
  box-shadow: 0 0 0 1px #222;
}

.footer-es-wrap .footer-slogan {
  margin-bottom: 16px;
}

.footer-es-wrap .footer-slogan p {
  color: #ccc;
  font-size: 13px;
  line-height: 1.4;
  margin: 0;
}

.footer-es-wrap .footer-slogan-split {
  color: #fff;
}

.footer-es-wrap .footer-slogan-split span {
  color: #ffd700;
  font-weight: 600;
}

.footer-es-wrap .footer-disclaimer {
  margin-bottom: 12px;
}

.footer-es-wrap .footer-copyright {
  color: #ccc;
  font-size: 12px;
}

.footer-es-wrap .footer-copyright span {
  color: #fff;
}

.footer-es-wrap .captcha {
  display: block;
  margin-top: 14px;
  color: #666;
  font-size: 11px;
  max-width: 600px;
}

.footer-es-wrap .captcha a {
  color: #888;
}

.footer-es-wrap .captcha a:hover {
  color: #ffd700;
}

@media (max-width: 860px) {
  .footer-es-wrap .accordion-menu {
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 30px 24px;
  }
}

@media (max-width: 520px) {
  .footer-es-wrap .accordion-menu {
    grid-template-columns: repeat(1, minmax(0, 1fr));
  }
  
  .footer-es-wrap .accordion-menu h3 {
    margin-bottom: 8px;
  }
}

.footer-es-wrap .back-to-top {
  background: #444;
  color: #fff;
  text-align: center;
  padding: 15px;
  text-decoration: none;
  display: block;
  font-weight: 600;
  transition: background 0.3s;
}

.footer-es-wrap .back-to-top:hover {
  background: #ffd700;
  color: #333;
}
</style>

