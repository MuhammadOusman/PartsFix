<style>
:root {
  --primary-orange: #ff6b35;
  --primary-orange-light: #ff8a5e;
  --primary-orange-dark: #e55a2b;
  --accent-orange: #ffab47;
  --pure-white: #ffffff;
  --light-gray: #f8f9fa;
  --border-gray: #e9ecef;
  --text-dark: #2c3e50;
  --text-muted: #6c757d;
  --shadow-light: 0 4px 12px rgba(255, 107, 53, 0.08);
  --shadow-medium: 0 6px 20px rgba(255, 107, 53, 0.12);
  --border-radius: 12px;
  --border-radius-small: 6px;
  --transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

/* Clean Footer Reset */
.footer-parts-wrap * {
  box-sizing: border-box;
}

/* Modern Footer Design - 4 Column Layout */
.footer-parts-wrap {
  background: linear-gradient(135deg, var(--text-dark), #34495e) !important;
  color: var(--pure-white) !important;
  padding: 0 !important;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif !important;
  border-top: 4px solid var(--primary-orange) !important;
  position: relative !important;
}

.footer-parts-wrap::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
}

.footer-parts-wrap .footer {
  padding: 80px 0 60px !important;
  background: transparent !important;
}

.footer-parts-wrap .container {
  max-width: 1400px !important;
  margin: 0 auto !important;
  padding: 0 24px !important;
}

.footer-parts-wrap .accordion-menu {
  display: grid !important;
  grid-template-columns: repeat(4, minmax(0, 1fr)) !important;
  gap: 48px !important;
  margin-bottom: 60px !important;
  list-style: none !important;
  padding: 0 !important;
}

.footer-parts-wrap .accordion-menu .has-children {
  list-style: none !important;
}

.footer-parts-wrap .accordion-menu h3 {
  display: block !important;
  color: var(--pure-white) !important;
  font-weight: 800 !important;
  font-size: 20px !important;
  margin: 0 0 24px !important;
  text-transform: uppercase !important;
  letter-spacing: 1px !important;
  position: relative !important;
  padding-bottom: 12px !important;
}

.footer-parts-wrap .accordion-menu h3::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 40px;
  height: 3px;
  background: linear-gradient(90deg, var(--primary-orange), var(--accent-orange));
  border-radius: 2px;
}

.footer-parts-wrap .accordion-menu ul {
  list-style: none !important;
  padding: 0 !important;
  margin: 0 !important;
}

.footer-parts-wrap .accordion-menu ul li {
  margin-bottom: 14px !important;
  transition: var(--transition) !important;
}

.footer-parts-wrap .accordion-menu ul li:hover {
  transform: translateX(4px) !important;
}

.footer-parts-wrap .accordion-menu ul li a {
  color: #bdc3c7 !important;
  text-decoration: none !important;
  font-size: 16px !important;
  font-weight: 500 !important;
  line-height: 1.5 !important;
  transition: var(--transition) !important;
}

.footer-parts-wrap .accordion-menu ul li a:hover {
  color: var(--primary-orange) !important;
}

/* Contact Info Styling */
.footer-contact-info p {
  margin: 0 0 18px !important;
  line-height: 1.6 !important;
  color: #bdc3c7 !important;
  font-size: 16px !important;
  font-weight: 500 !important;
}

.footer-support, .footer-email {
  margin-top: 28px !important;
  padding: 20px !important;
  background: rgba(255, 255, 255, 0.05) !important;
  border-radius: var(--border-radius-small) !important;
  border-left: 4px solid var(--primary-orange) !important;
}
}

.footer-support h4, .footer-email h4 {
  font-weight: 700 !important;
  font-size: 18px !important;
  color: var(--pure-white) !important;
  margin: 0 0 12px !important;
}

.footer-support p, .footer-email p {
  margin: 0 !important;
  color: #bdc3c7 !important;
  font-size: 16px !important;
  font-weight: 500 !important;
}

/* Newsletter Styling */
.footer-newsletter-desc {
  color: #bdc3c7 !important;
  margin: 0 0 28px !important;
  line-height: 1.6 !important;
  font-size: 16px !important;
  font-weight: 500 !important;
}

.newsletter-input-wrapper {
  position: relative !important;
  display: flex !important;
  border-radius: var(--border-radius-small) !important;
  overflow: hidden !important;
  box-shadow: var(--shadow-light) !important;
}

.newsletter-input {
  flex: 1 !important;
  padding: 16px 60px 16px 20px !important;
  border: 2px solid var(--primary-orange) !important;
  border-radius: var(--border-radius-small) 0 0 var(--border-radius-small) !important;
  font-size: 16px !important;
  transition: var(--transition) !important;
  background: var(--pure-white) !important;
  color: var(--text-dark) !important;
  font-weight: 500 !important;
}

.newsletter-input:focus {
  outline: none !important;
  border-color: var(--accent-orange) !important;
  box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.2) !important;
}

.newsletter-submit {
  position: absolute !important;
  right: 0 !important;
  top: 0 !important;
  bottom: 0 !important;
  background: linear-gradient(135deg, var(--primary-orange), var(--primary-orange-light)) !important;
  color: var(--pure-white) !important;
  border: none !important;
  padding: 0 20px !important;
  border-radius: 0 var(--border-radius-small) var(--border-radius-small) 0 !important;
  cursor: pointer !important;
  transition: var(--transition) !important;
  font-weight: 700 !important;
  text-transform: uppercase !important;
  letter-spacing: 0.5px !important;
}

.newsletter-submit:hover {
  background: linear-gradient(135deg, var(--primary-orange-dark), var(--primary-orange)) !important;
  transform: scale(1.02) !important;
}

.footer-parts-wrap .sub-footer {
  background: rgba(0, 0, 0, 0.3) !important;
  border-top: 1px solid rgba(255, 255, 255, 0.1) !important;
  margin: 0 !important;
  padding: 32px 0 !important;
  text-align: center !important;
  color: #bdc3c7 !important;
  font-size: 15px !important;
  font-weight: 500 !important;
}

.footer-parts-wrap .sub-footer p {
  margin: 0 !important;
}

/* Hide any old elements */
.footer-international-links,
.footer-slogan,
.footer-disclaimer,
.captcha,
.international-flag-links {
  display: none !important;
}

/* Responsive */
@media (max-width: 992px) {
  .footer-parts-wrap .accordion-menu {
    grid-template-columns: repeat(2, 1fr) !important;
