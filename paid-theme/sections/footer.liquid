{% schema %}
{
  "name": "Footer",
  "class": "cc-footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_back_to_top",
      "label": "Show 'Back to top'",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_trust_row",
      "label": "Show trust badges row",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_powered_by",
      "label": "Show 'Powered by Shopify'",
      "default": true
    },
    {
      "type": "header",
      "content": "Country/Region selector",
      "info": "To add a country/region, go to your [payment settings](/admin/settings/payments)"
    },
    {
      "type": "checkbox",
      "id": "enable_country_selector",
      "label": "Enable country/region selector",
      "default": true
    },
    {
      "type": "header",
      "content": "Language selector",
      "info": "To add a language, go to your [language settings](/admin/settings/languages)"
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "label": "Enable language selector",
      "default": true
    },
    {
      "type": "header",
      "content": "Secondary menu"
    },
    {
      "type": "link_list",
      "id": "secondary_menu",
      "label": "Secondary menu",
      "info": "This menu won't show dropdown items."
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f4f4f4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#070707"
    }
  ],
  "max_blocks": 4,
  "blocks": [
    {
      "type": "trust_badge",
      "name": "Trust badge",
      "settings": [
        {"type":"text","id":"title","label":"Title","default":"Fast Delivery"},
        {"type":"text","id":"text","label":"Sub text","default":"From only ¬£3.99"},
        {"type":"image_picker","id":"image","label":"Custom image (optional)"},
        {"type":"select","id":"icon","label":"Icon","default":"truck","options":[
          {"value":"none","label":"None"},
          {"value":"truck","label":"Truck"},
          {"value":"gift","label":"Gift"},
          {"value":"star","label":"Star"},
          {"value":"lock","label":"Lock"},
          {"value":"heart","label":"Heart"},
          {"value":"clock","label":"Clock"}
        ]}
      ]
    },
    {
      "type": "@app"
    },
    {
      "type": "link_list",
      "name": "Footer menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading (required)",
          "default": "Footer links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "info": "This menu won't show dropdown items.",
          "default": "footer"
        }
      ]
    },
    {
      "type": "text",
      "name": "Image, Text and Socials",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 300,
          "step": 10,
          "unit": "px",
          "label": "Maximum image width",
          "default": 150
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Talk about your store"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share store details, promotions, or brand content with your customers.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "enable_follow_on_shop",
          "default": false,
          "label": "Enable Follow on Shop",
          "info": "To allow customers to follow your store on the Shop app from your storefront, Shop Pay must be enabled. [Learn more](https://help.shopify.com/manual/online-store/themes/customizing-themes/follow-on-shop)"
        },
        {
          "type": "checkbox",
          "id": "show_social",
          "label": "Show social media links",
          "info": "Add links to your social media accounts in theme settings.",
          "default": false
        },
        {
          "type": "select",
          "id": "text_align",
          "label": "Content alignment",
          "options": [
            {
              "value": "text-start",
              "label": "Left"
            },
            {
              "value": "text-center",
              "label": "Center"
            },
            {
              "value": "text-end",
              "label": "Right"
            }
          ],
          "default": "text-start"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Email signup",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Newsletter"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
